% DEFINITION: definition (red)
\definecolor{mydefinitbg}{HTML}{FFE3DE}
\definecolor{mydefinitfr}{HTML}{EE2600}

\newtcbtheorem[number within = section]{definition}{Definition}
{
    enhanced,
    colback = mydefinitbg,
    frame hidden,
    boxrule = 0sp,
    borderline west = {2pt}{0pt}{mydefinitfr},
    sharp corners,
    detach title,
    before upper = \tcbtitle\par\smallskip,
    coltitle = mydefinitfr,
    fonttitle = \bfseries\sffamily,
    description font = \mdseries,
    terminator sign none,
    separator sign none,
    enhanced jigsaw,
    breakable
}{def}


